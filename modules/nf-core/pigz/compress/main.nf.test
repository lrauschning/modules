nextflow_process {

    name "Test Process PIGZ_COMPRESS"
    script "modules/nf-core/pigz/compress/main.nf"
    process "PIGZ_COMPRESS"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                                file(params.test_data['generic']['txt']['hello'], checkIfExists: true)
                            ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
